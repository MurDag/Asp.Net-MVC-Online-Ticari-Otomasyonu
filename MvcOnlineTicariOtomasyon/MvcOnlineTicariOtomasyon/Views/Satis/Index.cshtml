@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Satışlar</h2>
<table id="tbl1" class="table table-bordered" style="margin-top:20px;">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam Tutar</th>
            <th>Tarih</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    @foreach (var k in Model)
    {
        <tbody>
            <tr>
                <td>
                    @k.Satisid
                </td>
                <td>
                    @k.Urun.Urunad
                </td>
                <td>
                    @k.Cariler.CariAd @k.Cariler.CariSoyad
                </td>
                <td>
                    @k.Personel.PersonelAd @k.Personel.PersonelSoyad
                </td>
                <td>
                    @k.Adet
                </td>
                <td>
                    @k.Fiyat
                </td>
                <td>
                    @k.Toplam
                </td>
                <td>
                    @k.Tarih
                </td>
                <td>
                    <a class="btn btn-danger" href="/Satis/SatisSil/@k.Satisid">Sil</a>
                </td>
                <td>
                    <a class="btn btn-success" href="/Satis/SatisGetir/@k.Satisid">Güncelle</a>
                </td>
                <td>
                    <a class="btn btn-group" href="/Satis/SatisDetay/@k.Satisid" style="background-color:lightcoral; color:black">Detaylar</a>
                </td>

            </tr>
        </tbody>
    }
</table>
<a href="/Satis/YeniSatis " class="btn btn-primary">Yeni Satış Yap</a>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="~/Content/bootstrap.css" rel=" stylesheet" />



<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js"></script>



<script>

    $('#tbl1').dataTable({});

</script>

